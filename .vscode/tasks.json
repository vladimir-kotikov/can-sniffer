{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "watch",
            "type": "shell",
            "command": "${workspaceRoot}/node_modules/.bin/tsc --watch -p .",
            "isBackground": true,
            "problemMatcher": "$tsc-watch",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "command": "node",
            "args": [
                "${workspaceRoot/test/bitops.test.js}"
            ],
            "dependsOn": "watch",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "isBackground": false,
            "taskName": "Test"
        }
    ]
}
